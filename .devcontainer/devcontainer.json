{
	"name": "PropManage UI",
	"image": "mcr.microsoft.com/devcontainers/javascript-node:20-bookworm",
	"forwardPorts": [3001],
	"portsAttributes": {
		"3000": {
			"label": "Vite dev server",
			"onAutoForward": "notify"
		}
	},
	"features": {},
	"postCreateCommand": "pnpm install && curl -fsSL https://claude.ai/install.sh | bash",
	"customizations": {
		"vscode": {
			"extensions": [
				"dbaeumer.vscode-eslint",
				"esbenp.prettier-vscode",
				"redhat.vscode-yaml",
				"redhat.java",
				"bradlc.vscode-tailwindcss",
				"dsznajder.es7-react-js-snippets",
				"anthropic.claude-code"
			],
			"settings": {
				"editor.defaultFormatter": "esbenp.prettier-vscode",
				"editor.formatOnSave": true,
				"editor.codeActionsOnSave": {
					"source.fixAll.eslint": "explicit"
				}
			}
		}
	},
	"mounts": [
		{
			"source": "${localWorkspaceFolder}/../prop-manager",
			"target": "/workspaces/prop-manager",
			"type": "bind",
			"consistency": "cached"
		},
		{
			"source": "${localWorkspaceFolder}/../design-system",
			"target": "/workspaces/design-system",
			"type": "bind",
			"consistency": "cached"
		},
		{
			"source": "${localEnv:HOME}/.claude",
			"target": "/home/node/.claude",
			"type": "bind"
		}
	],
	"remoteUser": "node"
}
